@model List<kursa4.Models.Order>

@{
    ViewData["Title"] = "Мои заказы";
}

<h2>Мои заказы</h2>

@if (!Model.Any())
{
    <p>У вас пока нет заказов.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Номер заказа</th>
            <th>Дата</th>
            <th>Статус</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Status</td>
            </tr>
        }
        </tbody>
    </table>
}