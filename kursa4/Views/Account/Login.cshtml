@{
    ViewBag.Title = "Вход";
}

<form asp-action="Login" method="post" class="w-100 m-auto" style="max-width: 400px;">
    <h1 class="h3 mb-3 fw-normal">Вход в аккаунт</h1>

    <div class="form-floating mb-2">
        <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
        <label for="floatingInput">Email</label>
    </div>

    <div class="form-floating mb-2">
        <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Пароль" required>
        <label for="floatingPassword">Пароль</label>
    </div>

    <div class="form-check text-start my-3">
        <input class="form-check-input" type="checkbox" value="remember-me" id="checkDefault">
        <label class="form-check-label" for="checkDefault">Запомнить меня</label>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <button class="btn btn-primary w-100 py-2" type="submit">Войти</button>
</form>
