<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Style.css" asp-append-version="true" />
</head>
<body>
<header class="p-3 mb-3 border-bottom">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
                <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
                    <use xlink:href="#bootstrap"></use>
                </svg>
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-controller="Admin" asp-action="Index" class="nav-link px-2 link-secondary">CyberNote-admin</a>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-controller="Laptops" asp-action="ListLaptops" class="nav-link px-2 link-secondary">CyberNote</a>
                    </li>
                    <li>
                        <a asp-controller="Laptops" asp-action="ListLaptops" class="nav-link px-2 link-secondary">Каталог</a>
                    </li>
                    <li>
                        <a asp-controller="Laptops" asp-action="ListLaptops" class="nav-link px-2 link-secondary">Производители</a>
                    </li>
                    <li>
                        <a asp-controller="Laptops" asp-action="ListLaptops" class="nav-link px-2 link-secondary">Контакты</a>
                    </li>
                }
            </ul>


            <div class="dropdown text-end">
                <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span>@User.Identity.Name</span>
                    }
                    else
                    {
                        <span>Добро пожаловать! Для начала авторизуйтесь!</span>
                    }
                </a>

                <ul class="dropdown-menu dropdown-menu-end text-small shadow">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a asp-controller="Admin" asp-action="Index" class="dropdown-item">Админ панель</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a asp-controller="Account" asp-action="Index" class="dropdown-item">Личный кабинет</a>
                            </li>
                            <li>
                                <a asp-controller="Cart" asp-action="Index" class="dropdown-item">Корзина</a>
                            </li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a asp-controller="Account" asp-action="Logout" class="dropdown-item">Выйти</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-controller="Account" asp-action="Register" class="dropdown-item">Зарегистрироваться</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Login" class="dropdown-item">Войти</a>
                        </li>
                    }
                </ul>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        </div>
    </div>
</header>

<div class="container mt-5">
    @RenderBody()
</div>

<footer class="py-3 my-4">
    <ul class="nav justify-content-center border-bottom pb-3 mb-3">
        <li class="nav-item"><a asp-controller="Laptops" asp-action="ListLaptops" class="nav-link px-2 text-body-secondary">Каталог</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">О разработчике</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">О приложении</a></li>
    </ul>
    <p class="text-center text-body-secondary">© 2025 CyberNote, Made by Musashi</p>
</footer>

</body>
</html>
