<h1>Все ноутбуки</h1>
<h3>@Model.currCategory</h3>
<div class="row mt-5 mb-2">
    @{
        foreach (var laptop in Model.allLaptops)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@laptop.ImageUrl" alt="залупа нейкая" />
                <h2>@laptop.Model</h2>
                <p>Цена: @laptop.Price.ToString("c")</p>
                <p>
                    <a class="btn btn-warning" href="#">Подробнее</a>
                </p>
            </div>
        }
    }
</div>